<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<style>
  /* Navbar Styles */

.navbar {
  background-color: #343a40; /* Dark background color */
  padding: 1.3rem 0; /* Adjust padding as needed */
}

.navbar-brand {
  color: #fff; /* White text color */
  font-size: 1.2rem; /* Increase font size for branding */
  font-weight: bold; /* Bold font weight */
}

.navbar-toggler-icon {
  color: #fff; /* White color for the toggle icon */
}

.navbar-nav .nav-link {
  color: #fff; /* White text color for links */
  font-size: 1rem; /* Normal font size for links */
  padding: 10px; /* Adjust padding as needed */
}

.navbar-nav .nav-link:hover {
  color: #17a2b8; /* Hover color for links */
}

.dropdown-menu {
  background-color: #343a40; /* Dark background color for dropdown */
}

.dropdown-item {
  color: #fff; /* White text color for dropdown items */
}

.dropdown-item:hover {
  background-color: #17a2b8; /* Hover background color for dropdown items */
}

/* Error Message Styles */

.alert-danger {
  color: #721c24; /* Dark red text color for error messages */
  background-color: #f8d7da; /* Light red background color for error messages */
  border-color: #f5c6cb; /* Border color for error messages */
  margin-top: 20px; /* Margin top to separate from navbar */
  padding: 15px; /* Padding for error message */
  border-radius: 5px; /* Rounded corners for error message */
}

/* Search Styles */

.form-control {
  border-radius: 20px; /* Rounded corners for the search box */
  border: 2px solid #17a2b8; /* Border color for the search box */
  padding: 10px; /* Padding for the search box */
  width: 100%; /* Adjust width as needed */
  margin-right: 10px; /* Margin to separate from the button */
}

.btn-outline-success {
  border-radius: 20px; /* Rounded corners for the search button */
  border: 2px solid #17a2b8; /* Border color for the search button */
  color: #17a2b8; /* Text color for the search button */
  padding: 10px 20px; /* Padding for the search button */
  transition: all 0.3s ease; /* Smooth transition for hover effect */
  width: 100%; /* Adjust width as needed */
}

.btn-outline-success:hover {
  background-color: #17a2b8; /* Background color on hover */
  color: #fff; /* Text color on hover */
}

/* Responsive Styles */

@media (max-width: 768px) {
  .form-control {
      width: auto; /* Auto width for smaller screens */
      margin-right: 0; /* Remove margin for smaller screens */
      margin-bottom: 10px; /* Add margin bottom for spacing */
      margin-top : 20px ;
  }
}

/* Responsive Styles */

@media (max-width: 768px) {
  .navbar-nav .nav-link {
      padding: 8px; /* Adjust padding for smaller screens */
  }

  .navbar-brand {
      font-size: 1.2rem; /* Reduce font size for smaller screens */
  }
}

/* Container Styles */

.container {
  margin-top : 40px;
  margin: 20px; /* Adjust margin as needed */
  padding: 20px; /* Adjust padding as needed */
  border: 2px solid #17a2b8; /* Border color for the container */
  border-radius: 30px; /* Rounded corners for the container */
  background-color: #343a40; /* Dark background color for the container */
  color: #fff; /* White text color for the container */
}

</style>

<nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">EMERGENCY VEHICLE MANAGEMENT SYSTEM</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/"><i class="fas fa-home"></i> Home</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user"></i> Information
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/api/send-otp"><i class="fas fa-sign-in-alt"></i> Twilio Signin </a></li>
            <li><a class="dropdown-item" href="/api/verify-otp"><i class="fas fa-sign-verify-alt"></i> Twilio verifyOTP </a></li>
          </ul>
        </li>
        
        
        
        <% if (locals.user) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-user"></i> Facility.
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/user/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
          </li>
        <% } else {%>
        <li class="nav-item">
          <a class="nav-link" href="/user/signup"><i class="fas fa-user-plus"></i> Create Account</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/login"><i class="fas fa-sign-in-alt"></i> Login</a>
        </li>
        <% } %>
        <form action="/search" method="GET">
          <input class="form-control" type="search" name="query" placeholder="Search Hospitals" aria-label="Search">
          <button class="btn btn-outline-success" type="submit"><i class="fas fa-search"></i> Search </button>
        </form>        
      </ul>
    </div>
  </div>
</nav>

<% if (locals.error) { %>
<div class="container mt-4">
  <div class="alert alert-danger" role="alert"><%= locals.error %></div>
</div>
<% } %>

